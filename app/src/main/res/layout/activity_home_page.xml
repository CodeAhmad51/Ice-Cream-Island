                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:layout_below="@id/icecream_price_1"
                            android:layout_marginLeft="188dp"
                            android:layout_marginTop="25dp"
                            android:textColor="#ffffff"
                            />

