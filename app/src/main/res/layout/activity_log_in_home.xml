<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInHome"
    android:id="@+id/LogInHome"
    android:background="@drawable/home_page"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="230dp"
        app:cardCornerRadius="10dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="MENU"
            android:textStyle="italic|"
            android:shadowDx="1"
            android:textSize="30dp"
            android:textAlignment="center"
            android:background="#E65100"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="22dp"
        app:cardCornerRadius="14dp"
        android:layout_marginTop="421dp"
        android:layout_marginLeft="60dp"
        >
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="cup_iceCream"
            android:textStyle="bold|italic"
            android:background="#9C27B0"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="22dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="421dp"
        android:layout_marginLeft="210dp"
        >
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="cones IceCream"
            android:textStyle="bold|italic"
            android:background="#9C27B0"
            />

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="35dp"
        >

        <Button
            android:id="@+id/search_button"
            android:layout_width="90dp"
            android:layout_height="35dp"

            android:text="search" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp">

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="320dp"
            android:layout_height="wrap_content"

            android:background="#BCB3B3"
            android:hint="SEARCH"
            android:textAlignment="center"
            android:textColorHint="#000000" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cup_card"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp"
        android:elevation="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="300dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_alignParentLeft="true"
            android:src="@drawable/cups_ice_cream"
            />
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="300dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/cones_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:filterTouchesWhenObscured="true"
            android:src="@drawable/menu_cone_ice_cream"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="450dp"
        >
        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:filterTouchesWhenObscured="true"
            android:src="@drawable/stick_ice_cream"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="22dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="571dp"
        android:layout_marginLeft="60dp"
        >
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="stick IceCream"
            android:textStyle="bold"
            android:background="#9C27B0"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="22dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="572dp"
        android:layout_marginLeft="210dp"
        >
        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="cup IceCream"
            android:textStyle="bold"
            android:background="#9C27B0"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="450dp"
        app:cardCornerRadius="20dp"
        >

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"

            android:scaleType="fitXY"
            android:filterTouchesWhenObscured="true"
            android:src="@drawable/cups_ice_cream"/>

    </androidx.cardview.widget.CardView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav_bar"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:elevation="2dp"
        app:menu="@menu/bottom_bar_menu"
        android:background="@drawable/bottum_bar"
        app:itemIconTint="#BDBACA"
        app:labelVisibilityMode="unlabeled"

        app:itemIconSize="35dp"/>


</RelativeLayout>