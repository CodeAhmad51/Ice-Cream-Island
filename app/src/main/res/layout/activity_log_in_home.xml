<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInHome"
    android:id="@+id/LogInHome"
    android:background="@drawable/home_page"
    android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="230dp"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E65100"
                android:shadowDx="1"
                android:text="MENU"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="italic|bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="421dp"
            app:cardCornerRadius="14dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9C27B0"
                android:text="cup_iceCream"
                android:textAlignment="center"
                android:textStyle="bold|italic" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="421dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9C27B0"
                android:text="cones IceCream"
                android:textAlignment="center"
                android:textStyle="bold|italic" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="35dp"
            app:cardCornerRadius="10dp">

            <Button
                android:id="@+id/search_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="search" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="15dp">

            <EditText
                android:id="@+id/search_bar"
                android:layout_width="320dp"
                android:layout_height="wrap_content"

                android:background="#BCB3B3"
                android:hint="SEARCH"
                android:textAlignment="center"
                android:textColorHint="#000000" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="300dp"
            android:elevation="20dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/cup_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:scaleType="fitXY"
                android:src="@drawable/cups_ice_cream" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="300dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/cones_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:filterTouchesWhenObscured="true"
                android:scaleType="fitXY"
                android:src="@drawable/menu_cone_ice_cream" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="450dp"
            app:cardCornerRadius="20dp">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:filterTouchesWhenObscured="true"
                android:scaleType="fitXY"
                android:src="@drawable/stick_ice_cream" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="571dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9C27B0"
                android:text="stick IceCream"
                android:textAlignment="center"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="22dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="572dp"
            app:cardCornerRadius="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#9C27B0"
                android:text="cup IceCream"
                android:textAlignment="center"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="450dp"
            app:cardCornerRadius="20dp">

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"

                android:filterTouchesWhenObscured="true"
                android:scaleType="fitXY"
                android:src="@drawable/cups_ice_cream" />

        </androidx.cardview.widget.CardView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bottum_bar"

        android:elevation="2dp"
        app:itemIconSize="35dp"
        app:itemIconTint="#BDBACA"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_bar_menu" />


</RelativeLayout>