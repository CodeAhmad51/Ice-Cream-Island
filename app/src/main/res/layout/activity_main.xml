<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/username"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:hint="User Name"
        android:textColorHint="#000000"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="404dp"
        android:inputType="textPersonName"
        android:gravity="center"
        android:textColor="#190101"
        android:background="@drawable/round_bg"

        />

    <EditText
        android:id="@+id/password"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_below="@id/username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_bg"

        android:gravity="center"
        android:hint="password"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#190101"
        android:textColorHint="#000000"

        />

    <Button
        android:id="@+id/scoop"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:layout_below="@id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_pink_bg"
        android:gravity="center"

        android:hint="Let's Scoop"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColor="#F6E7EC"
        android:textColorHint="#FDF7F7"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/forget"
        android:layout_below="@id/scoop"
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:padding="5dp"
        android:hint="Forget Password ?"
        android:textColorHint="#252222"
        android:textStyle="bold"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:inputType="textPersonName"
        android:gravity="center"
        android:textColor="#F6E7EC"
        android:background="#00000000"

        />



</RelativeLayout>